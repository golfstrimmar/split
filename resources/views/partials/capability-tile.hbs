<div class="capability-tile">
  <div class="d-flex align-items-center">
    <div class="capability-tile__title">
      <span class="capability-tile__marker {{marker-class}}"></span>
      <h5>{{title}}</h5>
    </div>
  </div>
  <div class="capability-tile__description">
    <p>{{description}}</p>
  </div>
  <div class="capability-tile__projects">
    <p>Projects:</p>
    {{#each projects}}
      <a href="{{href}}">{{label}}</a>
    {{/each}}
  </div>
</div>
