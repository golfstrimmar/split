<footer class="footer d-flex flex-column justify-content-center position-relative"
  style="background-image: url('images/footer-bg.png')">
  <!-- id="particleBackground"-->

  <div class="container position-relative">
    <div class="hire-us d-flex flex-column flex-md-row align-items-center justify-content-between" id="hire">
      <div class="hire-us__body">
        <h2 class="hire-us__title">Let<span class="red-span">â€™</span>s Talk</h2>
        <p class="hire-us__desc">We collaborate with ambitious people and brands. Let's chat about what we can do for
          you.</p>
      </div>

      <a href="contact.html" class="btn hire-us__btn btn__red btn__hover-grey btn-6">Drop us a line
        <span></span>
      </a>

    </div>
    {{#each footer}}
    <div class="footer__inner w-100 d-flex flex-column-reverse flex-md-row">
      <div class="footer__info">
        <a href="/" class="logo">
         <img src="images/logo/logo-white.svg" alt="logo-white.svg">
          {{!-- <svg class="icon" width="115" height="43">
            <use xlink:href="#logo-white"></use>
          </svg> --}}
        </a>
        <address class="d-flex flex-column flex-wrap mb-0">
          <a 
            href="https://www.google.com/maps/place/SPLIT+Development/@48.510913,32.2634193,15z/data=!4m5!3m4!1s0x0:0x51a08cb3fab6cf4a!8m2!3d48.510913!4d32.2634193" target="_blank">Victor
            Chmilenko 47, Kropyvnytskyi, 25006</a>
          <a href="tel:0977003001">097 700 3001</a>
          <a href="mailto:info@splitdev.pro">info@splitdev.pro</a> 
        </address>
      </div>
      <div class="footer__nav d-flex flex-wrap">
        <ul class="footer__list list">
          {{#each col2}}
          <li class="footer__item">
            <a href="{{ link }}" class="footer__link animation-letters" target="_blank">{{ text }}</a>
          </li>
          {{/each}}
        </ul>
        <ul class="footer__list list">
          {{#each col3}}
          <li class="footer__item">
            <a href="{{ link }}" class="footer__link animation-letters" target="_blank">{{ text }}</a>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
    <div class="copyright">{{ copyright }}</div>
    {{/each}}
  </div>
